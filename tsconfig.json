{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "lib": [
            "DOM",
            "ES2015"
        ],
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "./src/**/*"
    ],
}